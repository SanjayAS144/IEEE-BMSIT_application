<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhyFragment">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/ieee_student_branch_bmsit_m"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="28sp" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mission1"
        android:layout_below="@id/main_heading"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/poppins"
        android:text="To promote leadership and skill development while facilitating bridging the gap between academia and industry."
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/missionicon"
        android:layout_below="@id/main_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_torch" />

    <ImageView
        android:id="@+id/visionicon"
        android:layout_below="@id/mission1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/home_lion" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/vision1"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/mission1"
        android:layout_marginStart="110dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins"
        android:text="To create a platform where students can express, learn and participate and remain technologically current while improving and developing leadership skills."
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/ieeedata"
        android:layout_below="@id/whyieee"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/ieee_features"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/whyieee"
        android:layout_below="@id/vision1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Why IEEE ?"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" />

    <Button
        android:id="@+id/join_btn"
        android:layout_below="@id/ieeedata"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Join Now !" />

</RelativeLayout>
</ScrollView>